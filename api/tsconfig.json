{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "allowJs": true,
    "checkJs": false,
    "noEmit": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "types": ["node"],
    "paths": {
      "next": ["../node_modules/next"],
      "next/server": ["../node_modules/next/server"]
    },
    "baseUrl": "..",
    "rootDir": "..",
    "typeRoots": ["../node_modules/@types"]
  },
  "include": ["./**/*.ts", "./**/*.js", "../src/**/*.ts"],
  "exclude": [
    "../node_modules",
    "../dist",
    "../tests",
    "../src/**/__tests__",
    "../src/**/test-utils",
    "../src/**/*.test.ts",
    "../src/**/*.test.js",
    "**/__tests__",
    "**/*.test.ts",
    "**/*.test.js"
  ]
}
