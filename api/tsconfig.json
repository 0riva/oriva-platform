{
  "compilerOptions": {
    "target": "ES2020",
    "module": "nodenext",
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "outDir": "./dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@api/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "nodenext",
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "incremental": true,
    "tsBuildInfoFile": "./.tsbuildinfo",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.js",
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "sql",
    "dist",
    "**/*.test.js",
    "**/*.test.ts"
  ]
}
