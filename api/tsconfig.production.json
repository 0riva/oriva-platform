{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "../build",
    "rootDir": ".",
    "noEmit": false,
    "skipLibCheck": true,
    "strict": false,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": false,
    "module": "commonjs",
    "target": "es2020"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "**/*.test.ts", "**/*.spec.ts"]
}