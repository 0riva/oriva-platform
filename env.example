# Oriva Platform Configuration
EXPO_PUBLIC_ORIVA_API_URL=https://api.oriva.io/api/v1
EXPO_PUBLIC_ORIVA_API_KEY=your_oriva_api_key_here
EXPO_PUBLIC_ORIVA_CLIENT_ID=your-app-name

# Oriva Platform API Environment Variables
# Copy this file to .env and fill in your actual values

# Supabase Configuration
SUPABASE_URL=https://cbzgvlkizkdfjmbrosav.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here
EXPO_PUBLIC_SUPABASE_URL=https://cbzgvlkizkdfjmbrosav.supabase.co

# API Configuration
NODE_ENV=development
PORT=3001
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:8081,https://oriva.io

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS=1000

# Admin Configuration (Optional)
ORIVA_ADMIN_TOKEN=your_admin_token_here

# Security
JWT_SECRET=your_jwt_secret_here

# ============================================================================
# Call Transcription Services (Travel Hub)
# ============================================================================

# Twilio Voice API - Required for call recording
# Get from: https://console.twilio.com
TWILIO_ACCOUNT_SID=ACxxxxxxxxxxxxxxxxxxxxxxxxxxxxx
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_RECORDING_CALLBACK_URL=https://api.oriva.io/webhooks/twilio

# Deepgram Transcription - Required for speech-to-text
# Get from: https://console.deepgram.com
DEEPGRAM_API_KEY=your_deepgram_api_key_here
DEEPGRAM_CALLBACK_SECRET=your_deepgram_callback_secret_here
DEEPGRAM_CALLBACK_URL=https://api.oriva.io/webhooks/deepgram

# AWS S3 Recording Storage
# Uses same credentials as photo uploads but separate bucket
AWS_RECORDINGS_BUCKET=oriva-call-recordings
AWS_RECORDINGS_REGION=us-east-1
