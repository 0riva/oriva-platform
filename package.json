{
  "name": "oriva-platform",
  "version": "1.0.0",
  "description": "Oriva Platform API",
  "main": "api/index.js",
  "scripts": {
    "dev": "node api/index.js",
    "start": "node api/index.js",
    "build": "echo 'No build step required'",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint api/ tests/ --ext .js",
    "lint:fix": "eslint api/ tests/ --ext .js --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm audit --audit-level high",
    "ci": "npm run test:ci && npm run security:audit"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "oriva",
    "api",
    "platform",
    "social-network"
  ],
  "author": "Oriva Team",
  "license": "MIT",
  "devDependencies": {
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
