{
  "name": "oriva-platform",
  "version": "1.0.0",
  "description": "Oriva Platform API",
  "main": "api/index.ts",
  "scripts": {
    "dev": "ts-node -r dotenv/config api/index.ts",
    "start": "ts-node api/index.ts",
    "build": "npm run build:api",
    "build:api": "echo 'Vercel will compile TypeScript automatically'",
    "build:local": "npm run clean && npm run compile && npm run copy-main && npm run cleanup-ts-conditional",
    "compile": "tsc --project api/tsconfig.production.json",
    "copy-main": "cp -r build/* api/ && rm -rf build",
    "cleanup-ts": "find api -name '*.ts' -delete",
    "cleanup-ts-conditional": "if [ \"$VERCEL\" != \"1\" ]; then npm run cleanup-ts; fi",
    "clean": "rm -rf dist build",
    "build:watch": "tsc --project api/tsconfig.json --watch",
    "type-check": "tsc --project api/tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:tdd": "jest --watch --verbose --bail",
    "lint": "eslint api/ tests/ --ext .js,.ts",
    "lint:fix": "eslint api/ tests/ --ext .js,.ts --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm audit --audit-level high",
    "ci": "npm run type-check && npm run test:ci && npm run security:audit",
    "tdd": "npm run test:tdd",
    "health:check": "ts-node api/monitoring/check-api-health.ts",
    "health:check:prod": "API_BASE_URL=https://oriva-platform.vercel.app ts-node api/monitoring/check-api-health.ts",
    "health:check:verbose": "ts-node api/monitoring/check-api-health.ts --verbose",
    "health:check:detailed": "ts-node api/monitoring/check-api-health.ts --detailed --verbose",
    "monitor": "ts-node api/monitoring/check-api-health.ts --detailed",
    "prepare": "husky"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.65.0",
    "@sentry/node": "^10.16.0",
    "@supabase/supabase-js": "^2.57.4",
    "@types/micro": "^7.3.7",
    "@vercel/node": "^5.3.24",
    "chalk": "^4.1.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.3.0",
    "helmet": "^8.1.0",
    "micro": "^10.0.1",
    "next": "^15.5.4",
    "openai": "^5.23.1",
    "stripe": "^19.0.0",
    "winston": "^3.17.0",
    "xss": "^1.0.15"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "oriva",
    "api",
    "platform",
    "social-network"
  ],
  "author": "Oriva Team",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.14",
    "@types/node": "^24.5.2",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "@upstash/redis": "^1.35.4",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jest": "^29.0.1",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-security": "^3.0.1",
    "husky": "^9.1.7",
    "jest": "^30.1.3",
    "lint-staged": "^16.2.3",
    "node-mocks-http": "^1.17.2",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "api/**/*.{js,ts}",
      "!api/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "moduleFileExtensions": [
      "ts",
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": [
        "ts-jest",
        {
          "tsconfig": "api/tsconfig.json"
        }
      ]
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  }
}
