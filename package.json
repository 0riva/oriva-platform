{
  "name": "oriva-platform",
  "version": "1.0.0",
  "description": "Oriva Platform API",
  "main": "api/index.js",
  "scripts": {
    "dev": "node api/index.js",
    "dev:ts": "ts-node api/index.ts",
    "start": "node api/index.js",
    "start:ts": "node api/dist/index.js",
    "build": "tsc --project api/tsconfig.json",
    "build:watch": "tsc --project api/tsconfig.json --watch",
    "type-check": "tsc --project api/tsconfig.json --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:tdd": "jest --watch --verbose --bail",
    "lint": "eslint api/ tests/ --ext .js,.ts",
    "lint:fix": "eslint api/ tests/ --ext .js,.ts --fix",
    "security:audit": "npm audit --audit-level moderate",
    "security:check": "npm audit --audit-level high",
    "ci": "npm run type-check && npm run test:ci && npm run security:audit",
    "tdd": "npm run test:tdd"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.57.4",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "winston": "^3.17.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "oriva",
    "api",
    "platform",
    "social-network"
  ],
  "author": "Oriva Team",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.5.2",
    "@types/winston": "^2.4.4",
    "eslint": "^9.35.0",
    "jest": "^30.1.3",
    "supertest": "^7.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "collectCoverageFrom": [
      "api/**/*.js",
      "!api/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  }
}
