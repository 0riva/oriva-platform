{
  "installCommand": "npm install",
  "buildCommand": "npm run build",
  "env": {
    "NODE_ENV": "production"
  },
  "build": {
    "env": {
      "NODE_ENV": "production"
    }
  },
  "rewrites": [
    {
      "source": "/api/v1/auth/:path*",
      "destination": "/api/v1/auth"
    },
    {
      "source": "/api/v1/conversations/:id",
      "destination": "/api/v1/conversations?id=$id"
    },
    {
      "source": "/api/v1/conversations",
      "destination": "/api/v1/conversations"
    },
    {
      "source": "/api/v1/hugo/:path*",
      "destination": "/api/v1/hugo"
    },
    {
      "source": "/api/payments/:path*",
      "destination": "/api/payments"
    },
    {
      "source": "/api/v1/apps/:appId/events",
      "destination": "/api/v1/events?appId=$appId"
    },
    {
      "source": "/api/v1/apps/:appId/notifications",
      "destination": "/api/v1/notifications?appId=$appId"
    },
    {
      "source": "/api/v1/users/:userId/notifications",
      "destination": "/api/v1/notifications?userId=$userId"
    },
    {
      "source": "/api/v1/notifications/:id",
      "destination": "/api/v1/notifications?id=$id"
    },
    {
      "source": "/api/v1/apps/:appId/webhooks/:id",
      "destination": "/api/v1/webhooks?appId=$appId&id=$id"
    },
    {
      "source": "/api/v1/apps/:appId/webhooks",
      "destination": "/api/v1/webhooks?appId=$appId"
    },
    {
      "source": "/api/workers/:path*",
      "destination": "/api/workers"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/index"
    }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        },
        {
          "key": "Access-Control-Allow-Methods",
          "value": "GET, POST, PUT, DELETE, OPTIONS"
        },
        {
          "key": "Access-Control-Allow-Headers",
          "value": "Authorization, Content-Type, X-Request-ID, X-App-ID"
        },
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    },
    {
      "source": "/api/v1/hugo/personality-schemas/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=900, stale-while-revalidate=1800"
        },
        {
          "key": "CDN-Cache-Control",
          "value": "public, max-age=900"
        }
      ]
    },
    {
      "source": "/api/health",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=30, must-revalidate"
        }
      ]
    }
  ],
  "outputDirectory": "public"
}